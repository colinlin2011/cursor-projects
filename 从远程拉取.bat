@echo off
chcp 65001 >nul
cd /d "%~dp0"

echo ========================================
echo 从远程仓库拉取更新
echo ========================================
echo.

if not exist .git (
    echo [错误] 未找到Git仓库
    echo 如果是首次在另一台电脑上使用，请运行:
    echo git clone ^<仓库地址^>
    pause
    exit /b 1
)

echo 正在从远程仓库拉取更新...
git pull

if %errorlevel% equ 0 (
    echo.
    echo ========================================
    echo [成功] 已从远程仓库拉取最新更新
    echo ========================================
) else (
    echo.
    echo ========================================
    echo [警告] 拉取可能失败，请检查:
    echo 1. 是否已连接远程仓库: git remote -v
    echo 2. 网络连接是否正常
    echo 3. 是否有未提交的本地修改（需要先提交或暂存）
    echo ========================================
)

echo.
pause
